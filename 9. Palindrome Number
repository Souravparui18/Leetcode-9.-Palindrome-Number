class Solution {
    public boolean isPalindrome(int x) {
        if(x<0 || (x%10 == 0 && x != 0)){
            return false;
        }
        
        int reverse = 0;
        while(x>0){
           int dig = x%10;
            reverse = dig + reverse;
            x= x/10;
            
        }
        return (reverse == x) || (x == reverse/10);
    }
}
